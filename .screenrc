autodetach on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

vbell on

#screen -t logs bash -c "cd /var/log && tail -f syslog"
screen -t mdadm watch -n 300 --differences=cumulatve cat /proc/mdstat
screen -t ncmpc ncmpc
screen -t vnstat vnstat -l
screen -t htop htop
screen
